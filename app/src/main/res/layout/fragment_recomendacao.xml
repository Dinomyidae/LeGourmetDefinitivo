<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sugestions">

    <SearchView
        android:id="@+id/pesquisaView5"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/searchiew_background"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Digite uma receita!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ListView
            android:id="@+id/receitaList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />
    </SearchView>

    <TextView
        android:id="@+id/string_recomenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="@string/talvez_voc_goste_dessas_receitas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pesquisaView5"
        app:layout_constraintVertical_bias="0.065" />

    <ImageButton
        android:id="@+id/bt_receita1"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:contentDescription="receita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/string_recomenda"
        app:srcCompat="@drawable/burger" />

    <ImageButton
        android:id="@+id/bt_receita2"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_receita1"
        app:srcCompat="@drawable/chicken"
        android:contentDescription="receita2" />

    <ImageButton
        android:id="@+id/bt_receitas3"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:contentDescription="receita"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_receita2"
        app:srcCompat="@drawable/fast_food" />

    <TextView
        android:id="@+id/string_receita3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:text="@string/receita_3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toEndOf="@+id/bt_receita1"
        app:layout_constraintTop_toBottomOf="@+id/string_recomenda" />

    <TextView
        android:id="@+id/string_receita2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="@string/receita_2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toEndOf="@+id/bt_receita1"
        app:layout_constraintTop_toBottomOf="@+id/string_recomenda" />

    <TextView
        android:id="@+id/string_receita1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/receita_1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toEndOf="@+id/bt_receita1"
        app:layout_constraintTop_toBottomOf="@+id/string_recomenda" />
</androidx.constraintlayout.widget.ConstraintLayout>