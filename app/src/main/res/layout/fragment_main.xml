<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="@string/seja_bem_vindo"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.184" />

    <SearchView
        android:id="@+id/pesquisaView"
        android:layout_width="245dp"
        android:layout_height="50dp"
        android:queryHint="Digite uma receita!"
        android:iconifiedByDefault="false"
        app:layout_constraintBottom_toTopOf="@+id/bemVindo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/searchiew_background"
        android:queryBackground="@android:color/transparent">

        <ListView
            android:id="@+id/receitaList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    </SearchView>

    <TextView
        android:id="@+id/pratosString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="250dp"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="@string/pratos"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bemVindo"
        app:layout_constraintVertical_bias="0.046" />

    <ImageButton
        android:id="@+id/bt_regionais"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:contentDescription="@string/regional"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pratosString"
        app:layout_constraintVertical_bias="0.133"
        app:srcCompat="@android:drawable/ic_menu_mapmode" />

    <ImageButton
        android:id="@+id/bt_massas"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:contentDescription="@string/massas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pratosString"
        app:layout_constraintVertical_bias="0.133"
        app:srcCompat="@drawable/fast_food" />

    <ImageButton
        android:id="@+id/bt_frango"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="115dp"
        android:layout_height="85dp"
        android:contentDescription="frango"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pratosString"
        app:layout_constraintVertical_bias="0.133"
        app:srcCompat="@drawable/chicken" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="regionais"
        app:layout_constraintBottom_toBottomOf="@+id/bt_regionais"
        app:layout_constraintEnd_toEndOf="@+id/bt_regionais"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="@+id/bt_regionais"
        app:layout_constraintTop_toTopOf="@+id/bt_regionais"
        app:layout_constraintVertical_bias="0.863"
        tools:text="Regioniais" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/massas"
        app:layout_constraintBottom_toBottomOf="@+id/bt_massas"
        app:layout_constraintEnd_toEndOf="@+id/bt_massas"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/bt_massas"
        app:layout_constraintTop_toTopOf="@+id/bt_massas"
        app:layout_constraintVertical_bias="0.863" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="frangoString"
        app:layout_constraintBottom_toBottomOf="@+id/bt_frango"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bt_frango"
        app:layout_constraintTop_toTopOf="@+id/bt_frango"
        app:layout_constraintVertical_bias="0.863"
        tools:text="Frango" />

    <TextView
        android:id="@+id/recomendaString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="@string/recomenda_es_de_hoje"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_regionais"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/bt_recomenda"
        android:layout_width="177dp"
        android:layout_height="169dp"
        android:text="@string/recomenda_es"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_recomenda2"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recomendaString" />

    <Button
        android:id="@+id/bt_recomenda2"
        android:layout_width="167dp"
        android:layout_height="171dp"
        android:text="@string/recomenda_es_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recomendaString"
        app:layout_constraintVertical_bias="0.493" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"/>

</androidx.constraintlayout.widget.ConstraintLayout>